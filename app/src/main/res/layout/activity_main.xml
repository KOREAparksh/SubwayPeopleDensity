<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/noSubway"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="300dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Select Subway"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subwayViewer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="2dp"
            android:visibility="invisible"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/box_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/box_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/box_2"
                android:padding="10dp"
                android:background="@drawable/roundbox_first_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="1칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_1_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/box_6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_1"
                app:layout_constraintBottom_toTopOf="@id/box_3"
                android:padding="10dp"
                android:background="@drawable/roundbox_center_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="2칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_2_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/box_7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_2"
                app:layout_constraintBottom_toTopOf="@id/box_4"
                android:padding="10dp"
                android:background="@drawable/roundbox_center_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="3칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_3_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/box_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="10dp"
                android:background="@drawable/roundbox_center_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="4칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_4_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/box_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/box_6"
                android:padding="10dp"
                android:background="@drawable/roundbox_center_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="5칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_5_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/box_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_5"
                app:layout_constraintBottom_toTopOf="@id/box_7"
                android:padding="10dp"
                android:background="@drawable/roundbox_center_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="6칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_6_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/box_3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_6"
                app:layout_constraintBottom_toTopOf="@id/box_8"
                android:padding="10dp"
                android:background="@drawable/roundbox_center_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="7칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_7_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/box_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/box_7"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="10dp"
                android:background="@drawable/roundbox_last_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:background="@drawable/roundbox_number"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:text="8칸"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 인원 : "/>
                    <TextView
                        android:id="@+id/box_8_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20명"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/black"
    app:layout_constraintTop_toBottomOf="@id/noSubway"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/noSubway"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>